<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row ml-1">
      <div class="col-md-4">
        <img src="http://localhost:3000/<%= booking.payments.proofPayment %>  " alt="image" style="width: 100%; display: block" />

        <div class="row">
          <% if(booking.payments.status == 'Proses' ){ %>
          <form action="/admin/booking/<%= booking.id %>/confrimation?_method=PUT" method="POST">
            <button type="submit" class="btn btn-success btn-sm">
              <i class="fas fa-check"> Confrimation </i>
            </button>
          </form>
          <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" class="ml-4" method="POST">
            <button type="submit" class="btn btn-danger btn-sm">
              <i class="fas fa-times"> Reject </i>
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th><Title></Title></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                <td><%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
